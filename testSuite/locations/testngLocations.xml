<?xml version="1.0" encoding="UTF-8"?>

<suite name="Test Suite for Room Manager" parallel = "false">

  <listeners>
      <listener class-name="org.uncommons.reportng.HTMLReporter"/>
      <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
      <listener class-name="org.roommanager.utils.FailedScreenShot"/>
  </listeners>
  
  
  <test name="Verify that is possible create a location">
    <classes>      
      <class name="org.roommanager.test.admin.locations.CreateLocations" />          
    </classes>    
  </test>
  
  <test name="Verify that is posible delete a location">
    <classes>      
      <class name="org.roommanager.test.admin.locations.DeleteLocation" />          
    </classes>    
  </test>
  
    <test name="Verify that is possible update a location">
    <classes>      
      <class name="org.roommanager.test.admin.locations.UpdateLocation" />          
    </classes>    
  </test>
  
</suite>